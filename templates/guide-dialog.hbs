                {{/each}}
            </nav>
            <div class="tab {{this.macrosTabs.addToLayers.cssClass}}" data-group="{{this.macrosTabs.addToLayers.group}}" data-tab="{{this.macrosTabs.addToLayers.id}}">
                <div class="guide-dialog-guide-text">{{localize "CanvasLayers.GuideDialog.Macros.AddToLayers.Description"}}</div>
                <img src="modules/canvas-layers/assets/MacroExample1.webp" />
            </div>
        </div>
    </div>
</div>